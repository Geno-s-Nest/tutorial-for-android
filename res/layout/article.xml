	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<TextView
		android:layout_height="wrap_content"
		android:text="大型文本"
		android:textAppearance="?android:attr/textAppearanceLarge"
